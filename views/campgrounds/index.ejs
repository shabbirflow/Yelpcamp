<% layout('./layouts/boilerplate.ejs') %>

    <h1>All Campgrounds</h1>
    <% for(let camp of allCampgrounds){ %>
      <div class="card mb-3">
        <div class="row">
        <div class="col-md-4">
          <img src = <%= camp.image %> alt = 'camp image' class='img-fluid' style='width: 300px; height: 300px'/>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h1 class="card-title"><%= camp.title %></h1>
            <p class="card-text"><%= camp.description %></p>
            <p class="card-text text-muted"><%= camp.location %></p>
            <a href="campgrounds/<%= camp._id %>" class="btn btn-primary">View</a>
          </div>
        </div>
        </div>
      </div>
      <% } %>

